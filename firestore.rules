rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isApproved() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == 'approved';
    }

    function isAdmin() {
      return isApproved() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      // Anyone authenticated can create their own user document during registration
      allow create: if isAuthenticated() && request.auth.uid == userId;

      // Users can read their own profile
      allow read: if isAuthenticated() && request.auth.uid == userId;

      // Admins can read all users
      allow read: if isAdmin();

      // Only admins can update user status and roles
      allow update: if isAdmin() ||
                      (isAuthenticated() && request.auth.uid == userId &&
                       !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status']));

      // Only admins can delete users
      allow delete: if isAdmin();
    }

    // User slippage records - private to each user
    match /userSlippageRecords/{recordId} {
      // Users can only create/read/update/delete their own records
      allow create: if isApproved() && request.resource.data.userId == request.auth.uid;
      allow read: if isApproved() && resource.data.userId == request.auth.uid;
      allow update: if isApproved() && resource.data.userId == request.auth.uid;
      allow delete: if isApproved() && resource.data.userId == request.auth.uid;

      // Admins can access all user records
      allow read, write, delete: if isAdmin();
    }

    // Published slippage records - visible to all approved users
    match /publishedSlippageRecords/{recordId} {
      // All approved users can read published records
      allow read: if isApproved();

      // Any approved user can publish (create)
      allow create: if isApproved();

      // Only admins can delete published records
      allow delete: if isAdmin();

      // No one can update published records (they are immutable once published)
      allow update: if false;
    }

    // Library collections - shared data accessible to all approved users
    match /strandLibrary/{strandId} {
      // All approved users can read and write strand definitions
      allow read, write: if isApproved();
    }

    match /aggregateLibrary/{aggregateId} {
      // All approved users can read and write aggregate definitions
      allow read, write: if isApproved();
    }

    match /admixLibrary/{admixId} {
      // All approved users can read and write admix definitions
      allow read, write: if isApproved();
    }

    match /projectLibrary/{projectId} {
      // All approved users can read and write project definitions
      allow read, write: if isApproved();
    }

    match /productLibrary/{productId} {
      // All approved users can read and write product definitions
      allow read, write: if isApproved();
    }

    // Contacts collection - accessible to all authenticated users
    match /contacts/{contactId} {
      // Authenticated users can read and write contacts
      allow read, write: if isAuthenticated();
    }

    // All other collections - only approved users can access
    match /{document=**} {
      allow read, write: if isApproved();
    }
  }
}
